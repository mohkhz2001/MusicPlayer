<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#0353a4"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@drawable/ic_audiotrack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/Music_Name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:layout_marginRight="16dp"
                android:text="doset daram kheyly ziad...."
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/Artist_Name_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Music_Name_txt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="abooooooooooooooooooood"
                android:textSize="14dp"
                android:textStyle="bold"

                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>